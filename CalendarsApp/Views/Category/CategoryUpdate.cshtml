@model CalendarsApp.Entities.Category
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <form method="post"
    <label>Kategori Adı</label>
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Kategori Rengi</label>
    @Html.TextAreaFor(x => x.Color, new { @class = "form-control" })
    <br />
     <label>Kategori Açıklaması</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
    </form>
</div>
